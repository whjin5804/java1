
package arrange;

import java.util.Scanner; //Scanner class를 불러온다.
import java.text.*; //decimal format을 써주기위함
import java.text.*;

public class Driver {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in); //입력값을 넣어주는 system.in 생성
		System.out.println("Enter your buying price per share:"); //입력값을 받는다.
		double buyingPrice = scan.nextDouble();
		int day = 1;
		double closingPrice = 0.1;
		DecimalFormat df = new DecimalFormat("0.00"); // 첫번쨰 자리부터 쉼표.을 찍는다.
		
		while (true) {
			System.out.println("Enter the closing price for day"
					+ day + "(any negative value to leave : ");
		closingPrice = scan.nextDouble();
		if (closingPrice < 0.0) break; //입력값이 0보다 작으면 멈춘다.
		
		double earnings = closingPrice - buyingPrice;
		if (earnings > 0.0) {
			System.out.println("After day" + day + ", you earned"
					+ df.format(earnings) + " per share.");
			
		}
		
		else if (earnings < 0.0) {
			System.out.println("After day" + day + ", you lost"
					+ df.format(-earnings) + " per share.");
			
			}
		else {
				System.out.println("After day" + day + ", you have" + 
							"no earnings per share.");
			}
			day += 1;
		}
		scan.close();
	}
}
